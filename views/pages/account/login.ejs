<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head'); %>

    <body>
        <div class="row">
            <div class="col-2"><%-include('../../partials/header'); %></div>
            <div class="container col-9">
                <div class="row mt-5">
                    <div class="wrapper_01 mt-5">
                        <div class="box-form">
                            <h3 class="text-center mb-4 text-uppercase mt-3">Sign In</h3>
                            <form action="/account/login" method="POST">
                                <div class="form-group">
                                    <label for="username" class="pb-2">Username</label>
                                    <input type="text" name="username" id="username" required>
                                </div>
                                <div class="form-group mt-4">
                                    <label for="password" class="pb-2">Password</label>
                                    <input type="password" name="password" id="password" required>
                                </div>
                                <div class="btn-sub mt-4 text-end  d-flex justify-content-between">
                                    <div class="d-flex">
                                        <p class="text-dark">Tạo tài khoản mới</p>
                                        <a href="/account/register" class="ps-2 text-decoration-none fw-bold">Create
                                            Account</a>
                                    </div>
                                    <p><a href="#" class="text-decoration-none">Forgot password?</a></p>
                                </div>
                                <div class="btn-sub mt-4 text-end">
                                    <button type="submit" class="btn btn-bg">Sign In</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

</html>